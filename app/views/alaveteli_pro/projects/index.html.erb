<div class="inner-canvas">

  <div class="inner-canvas-header">
    <div class="row">
      <h1><%= _("Projects") %></h1>
    </div>
  </div>

  <div class="inner-canvas-body">
    <div class="row">
      <div class="dashboard-left-column">
        <%= render partial: 'alaveteli_pro/dashboard/sidebar' %>
      </div> <!-- .dashboard-left-column -->

      <div class="dashboard-right-column">
        <div class="dashboard__warnings">
          <div class="dashboard__warning">
            <div class="dashboard__warning__content">
              <p><%= _('{{site_name}} Projects is a early beta feature.', site_name: site_name) %></p>
              <% if feature_enabled?(:pro_projects_self_serve, current_user) %>
                <%= link_to _("Create a new Project"), new_alaveteli_pro_project_path, :class => 'button' %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="projects">
          <div class="projects__list">
            <%= render @projects %>
            <%= will_paginate(@projects) %>
          </div>  <!-- .projects__list -->
        </div>  <!-- .projects -->
      </div>  <!-- .dashboard-right-column -->
   </div>
  </div>  <!-- .dashboard-body -->
</div>  <!-- .dashboard -->
